<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Face"
    android:layout_column="5"
    >

    <!--PASSAGEIRO-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="0"
        android:layout_gravity="center_vertical"

        android:text="@string/pas"

        android:textColor="@color/texto"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passEdit"

        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="center_horizontal"
        android:autoSizePresetSizes="1"
        android:autoSizeTextType="uniform"
        android:autofillHints="@string/pas"
        android:ems="80"
        android:inputType="text"

        android:text=""
        android:textSize="30sp"
        android:textStyle="bold"

        tools:targetApi="o" />

    <!--CARRO-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="@string/car"
        android:textColor="@color/texto"

        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/carEdit"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:autofillHints="@string/car"

        android:inputType="numberDecimal"
        android:maxLength="1"
        android:text=""

        android:textSize="30sp"
        android:textStyle="bold" />

    <!--ESPAÇO1-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:text="         "
        android:textColor="@color/texto"

        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:autofillHints="@string/pol"
        android:text="         "

        android:textSize="15sp"
        android:textStyle="bold" />

    <!--POLTRONA-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:text="@string/pol"
        android:textColor="@color/texto"

        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/poltronaEdit"

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:autofillHints="@string/pol"

        android:inputType="numberDecimal"
        android:maxLength="2"
        android:text=""

        android:textSize="30sp"
        android:textStyle="bold" />

    <!--ESPAÇO1-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="3"
        android:text="  "
        android:textColor="@color/texto"

        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="3"
        android:autofillHints="@string/pol"
        android:text="   "

        android:textSize="15sp"
        android:textStyle="bold" />

    <!--PAGO-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="2"
        android:layout_column="4"
        android:layout_gravity="center_horizontal"
        android:text="@string/pago"

        android:textColor="@color/texto"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pagoEdit"

        android:layout_width="40pt"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"
        android:layout_gravity="center_horizontal"
        android:autofillHints="@string/pago"

        android:inputType="numberDecimal"
        android:text=""

        android:textSize="30sp"
        android:textStyle="bold" />

    <!--id-->
    <TextView
        android:id="@+id/id"
        android:layout_width="20pt"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="4"

        android:layout_gravity="center_horizontal"

        android:text=""
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <!--Botões de controle-->
    <Button
        android:id="@+id/guardar"
        android:layout_row="1"

        android:layout_column="5"
        android:onClick="onClick"
        android:text="@string/arquivar"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"

        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/exluir"
        android:layout_row="2"

        android:layout_column="5"
        android:onClick="onClick"
        android:text="@string/del"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"

        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dados"
        android:layout_row="3"

        android:layout_column="5"
        android:onClick="onClick"
        android:text="@string/dados"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"

        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/config"
        android:layout_row="4"

        android:layout_column="4"
        android:layout_columnSpan="2"
        android:onClick="onClick"
        android:text="@string/conf"
        android:textAllCaps="true"

        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_column="0"
    android:layout_columnSpan="0"
    android:layout_row="7"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <!--Tabela -->

    <TableLayout
        android:id="@+id/exibirAll"
        android:layout_width="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:scrollbars="vertical"
        android:layout_height="match_parent">

            <TableRow
                android:id="@+id/exibir"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_margin="1dp"
                android:orientation="horizontal">

                <!--Coluna 0-->
                <!--<TextView
                android:id="@+id/idDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textSize="18sp"
                android:textStyle="bold"
                />-->

                <!--Coluna 1-->
                <TextView
                    android:id="@+id/pasDB"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/pas"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!--Coluna 2-->
                <TextView
                    android:id="@+id/carDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/car"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!--Coluna 3-->
                <TextView
                    android:id="@+id/aceDB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/pol"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />

                <!--Coluna 4-->
                <TextView
                    android:id="@+id/valorDB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/pago"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout></ScrollView></LinearLayout>
</GridLayout>

